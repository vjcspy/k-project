{
  "name": "@vjcspy/web-ui",
  "version": "1.0.0",
  "description": "Web UI",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/vjcspy/web-ui",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\"",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "trash build test",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('web-ui must be installed with Yarn: https://yarnpkg.com/')\"",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "engines": {
    "node": ">=10.22"
  },
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "@apollo/react-hooks": "^4.0.0",
    "@apollo/react-ssr": "^4.0.0",
    "@graphql-codegen/cli": "^1.17.7",
    "@magento/peregrine": "^7.0.0",
    "@magento/venia-ui": "^4.0.0",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-cache-persist": "^0.1.1",
    "apollo-link": "^1.2.14",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "isomorphic-unfetch": "^3.0.0",
    "next": "latest",
    "react": "^16.13.1",
    "react-dom": "^16.8.3",
    "react-redux": "^7.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.17.7",
    "@graphql-codegen/cli": "^1.17.7",
    "@graphql-codegen/fragment-matcher": "^1.17.7",
    "@graphql-codegen/introspection": "^1.17.7",
    "@graphql-codegen/schema-ast": "^1.17.7",
    "@graphql-codegen/time": "^1.17.7",
    "@graphql-codegen/typescript": "^1.17.7",
    "@graphql-codegen/typescript-document-nodes": "^1.17.7",
    "@graphql-codegen/typescript-graphql-files-modules": "^1.17.7",
    "@graphql-codegen/typescript-operations": "^1.17.7",
    "@graphql-codegen/typescript-react-apollo": "^1.17.7",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "trash-cli": "^3.0.0",
    "typescript": "^3.5.3"
  },
  "prettier": {
    "singleQuote": true
  }
}

{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "/WEB": "_______________________________WEB_______________________________",
    "dev": "yarn --cwd packages/web dev",
    "debug": "yarn --cwd packages/web debug",
    "build": "yarn --cwd packages/web build",
    "start": "yarn --cwd packages/web start",
    "web": "yarn workspace @vjcspy/web",
    "lint": "eslint '*/**/*.{ts,tsx}' --quiet --fix",
    "prettier": "prettier '*/**/*.{ts,tsx}' --write",
    "/API": "_______________________________API_______________________________",
    "api": "yarn workspace @vjcspy/api",
    "a": "yarn api start:dev",
    "/MODULES": "_______________________________MODULES_______________________________",
    "web-ui": "yarn workspace @vjcspy/web-ui",
    "web-chiaki": "yarn workspace @vjcspy/web-chiaki",
    "bar": "yarn workspace @vjcspy/bar",
    "chitility": "yarn workspace @vjcspy/chitility",
    "module:build:web-ui": "yarn web-ui build",
    "module:build:web-chiaki": "yarn web-chiaki build",
    "module:build:bar": "yarn bar build",
    "module:build:chitility": "yarn chitility build",
    "m:b": "run-s module:build:*",
    "m:w": "run-p \"chitility watch\" \"web-ui watch\" --",
    "------ playground ------": "----------------------",
    "outdated": "yarn outdated",
    "upgrade": "yarn upgrade-interactive --latest"
  },
  "engines": {
    "node": ">=10.22"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "trash-cli": "^3.0.0",
    "typescript": "^3.5.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "eslint-plugin-react": "^7.20.6"
  }
}
